{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"]
		},
		"typeRoots": ["node_modules/@types", "src/shared/typings/index"]
	},
	"include": ["src", "vitest.config.ts", "tsup.config.ts", "eslint.config.js"],
	"exclude": ["node_modules", "dist"]
}
